{% extends 'base.html.twig' %}
    {% block title %}Send Message{% endblock %}
    {% block main %}
        <section>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h3>Mailbox</h3>
                        <div class=" form text-center offset-4 col-4">{{ form(form) }}</div>
                        <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                            See messages
                        </a>
                    </div>
                </div>
            </div>
        </section>
        <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h4 class="offcanvas-title" id="offcanvasExampleLabel">Mailbox</h4>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="list-group">
                    <a href="{{ path('messages') }}" class="list-group-item list-group-item-action">Reception</a>
                </div>
                <div class="list-group">
                    <a href="{{ path('received') }}" class="list-group-item list-group-item-action">Messages received</a>
                </div>
                <div class="list-group">
                    <a href="{{ path('sent') }}" class="list-group-item list-group-item-action">Messages sent</a>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
    {% endblock %}
