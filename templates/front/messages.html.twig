{% extends 'base.html.twig' %}
{% block title %}Mailbox{% endblock %}
{% block main %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3>Mailbox</h3>
                    <p>Mailbox resume</p>
                    <p>Messages received : {{ app.user.received|length }}</p>
                    <p>Messages send : {{ app.user.sent|length }}</p>
                    <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                        See messages
                    </a>
                    <a class="btn btn-primary" href="{{ path("send") }}">Write message</a>
                </div>
            </div>
        </div>
    </section>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h4 class="offcanvas-title" id="offcanvasExampleLabel">Mailbox</h4>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="list-group">
                <a href="{{ path('messages') }}" class="list-group-item list-group-item-action active">Reception</a>
            </div>
            <div class="list-group">
                <a href="{{ path('received') }}" class="list-group-item list-group-item-action">Messages received</a>
            </div>
            <div class="list-group">
                <a href="{{ path('sent') }}" class="list-group-item list-group-item-action">Messages sent</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}